@model UsuarioModel
@{
    ViewData["Title"] = "Editar usuário";
}
<div class="text-center">

    <h1 class="display-4">Editar usuário</h1>

</div>

<form asp-controller="Usuario" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
        @*@Html.ValidationMessageFor(x => x.Nome)*@
    </div>

    <div class="form-group">
        <label for="cpf" class="form-label">CPF</label>
        <input type="text" asp-for="CPF" class="form-control" placeholder="Digite o CPF do usuário">
        @*@Html.ValidationMessageFor(x => x.Nome)*@
    </div>

    <div class="form-group">
        <label for="nascimento" class="form-label">Data de nascimento</label>
        <input type="text" asp-for="DataNascimento" class="form-control" placeholder="Digite a data de nascimento do usuário">
        @*   @Html.ValidationMessageFor(x => x.Celular)*@
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário">
        @* @Html.ValidationMessageFor(x => x.Email)*@
    </div>


    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Usuario" role="button">Voltar</a>

</form>
